{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "extends": [
            "schedule:daily"
        ],
        "automerge": true,
        "automergeType": "pr"
    },
    "packageRules": [
        {
            "description": "Automerge non-major updates",
            "matchUpdateTypes": ["minor", "patch"],
            "matchCurrentVersion": "!/^0/",
            "automerge": true
        }
    ]
}
